{
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source" : "**/*.html",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=3600"
          }
        ]
      },
      {
        "source" : "**/*.css",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=31536000"
          }
        ]
      },
      {
        "source" : "**/*.js",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "private, max-age=31536000"
          }
        ]
      },
      {
        "source" : "**/*.{jpg,png,svg}",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=31536000"
          }
        ]
      }
    ]
  }
}
